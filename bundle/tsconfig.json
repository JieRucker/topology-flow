{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "paths": {
      "@topology-flow/core": ["../packages/core"],
      "@topology-flow/core/*": ["../packages/core/src/*"],
      "@topology-flow/flow-diagram": ["../packages/flow-diagram"],
      "@topology-flow/activity-diagram": ["../packages/activity-diagram"],
      "@topology-flow/class-diagram": ["../packages/class-diagram"],
      "@topology-flow/sequence-diagram": ["../packages/sequence-diagram"],
      "@topology-flow/chart-diagram": ["../packages/chart-diagram"],
      "@topology-flow/layout": ["../packages/layout"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
